@page  
@model IndexModel  
@{  
    ViewData["Title"] = "Wyszukaj konto";  
}  

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">  

<style>  
    html, body {  
        font-family: 'Inter', Arial, sans-serif;  
        background: #f5f7fa;  
        margin: 0;  
        padding: 0;  
        height: 100%;  
    }  

    .center-bar-container {  
        display: flex;  
        justify-content: center;  
        align-items: center;  
        min-height: 90vh;  
    }  

    .search-bar {  
        background: #fff;  
        border-radius: 24px;  
        box-shadow: 0 4px 32px rgba(79,140,255,0.10), 0 1.5px 8px #0002;  
        display: flex;  
        flex-direction: row;  
        align-items: center;  
        padding: 2.2rem 2.5rem;  
        gap: 2.5rem;  
        min-width: 480px;  
        max-width: 95vw;  
        border: 2.5px solid #4f8cff;  
        position: relative;  
    }  

    .search-bar label {  
        display: none;  
    }  

    .search-bar input[type="text"] {  
        width: 180px;  
        padding: 1.1rem 1.2rem;  
        border: 1.5px solid #e0e4ea;  
        border-radius: 12px;  
        font-size: 1.15rem;  
        background: #f8fafc;  
        transition: border 0.2s, box-shadow 0.2s;  
        outline: none;  
        box-shadow: 0 1px 4px #4f8cff11;  
    }  

    .search-bar input[type="text"]:focus {  
        border: 1.5px solid #4f8cff;  
        background: #fff;  
        box-shadow: 0 2px 8px #4f8cff22;  
    }  

    .search-bar .divider {  
        width: 2px;  
        height: 40px;  
        background: #e0e4ea;  
        border-radius: 2px;  
    }  

    .search-bar button {  
        padding: 1.1rem 2.5rem;  
        background: linear-gradient(90deg, #4f8cff 0%, #38b6ff 100%);  
        color: #fff;  
        font-size: 1.13rem;  
        font-weight: 600;  
        border: none;  
        border-radius: 12px;  
        box-shadow: 0 2px 8px rgba(79,140,255,0.10);  
        cursor: pointer;  
        transition: background 0.2s, transform 0.1s;  
        letter-spacing: 0.5px;  
        margin-left: 2rem;  
    }  

    .search-bar button:hover {  
        background: linear-gradient(90deg, #38b6ff 0%, #4f8cff 100%);  
        transform: translateY(-2px) scale(1.03);  
    }  

    
    .search-bar {  
        flex-direction: column;  
        gap: 1.2rem;  
        min-width: unset;  
        padding: 1.2rem 0.7rem 1rem 0.7rem;  
    }  

    .search-bar .divider {  
        display: none;  
    }  

    .search-bar button {  
        margin-left: 0;  
        width: 100%;  
    }  

    .search-bar input[type="text"] {  
        width: 100%;  
    }  

     
</style>  

<div class="center-bar-container">  
    <form method="get" asp-page="/MatchHistory" class="search-bar">  
        <input type="text" id="accountName" name="accountName" placeholder="Nazwa konta" required autocomplete="off" />  
        <div class="divider"></div>  
        <input type="text" id="tagLine" name="tagLine" placeholder="Tag (np. KR1)" required autocomplete="off" />  
        <button type="submit">Pokaż mecze</button>  
    </form>  
</div>